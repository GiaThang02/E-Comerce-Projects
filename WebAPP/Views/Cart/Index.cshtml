@using WebAPP.Models.ViewModels
@model CartItemViewModel


<h1 class="text-center">Giỏ Hàng</h1>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

<section id="cart_items" class="mt-4">
    <div class="container">
        <div class="breadcrumbs mb-3">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Shopping Cart</li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Item</td>
                        <td class="description">Name</td>
                        <td class="price">Price</td>
                        <td class="quantity">Quantity</td>
                        <td class="total">Total</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                   
                    @if (Model.CartItems.Count > 0)
                    {
                        <tr>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td class="cart_product">
                                    <a href=""><img src="~/media//products/@item.Image"></a>
                                </td>
                                <td class="cart_description">
                                    <h4><a href="">@item.ProductName</a></h4>
                                </td>
                                <td class="cart_price">
                                    <p>@item.Price</p>
                                </td>
                                <td class="cart_quantity">
                                    <a class="btn btn-success btn-sm" asp-controller="Cart" asp-action="Increase" asp-route-id="@item.ProductID">+</a>
                                    <input class="cart_quantity_input" type="text" name="quantity" value="@item.Quantity" autocomplete="off" size="2">
                                    <a class="btn btn-success btn-sm" asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.ProductID">-</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductID">Remove</a>
                                </td>
                                <td class="cart_total">
                                    <p class="cart_total_price">@((item.Quantity * item.Price).ToString("#,##0,VNĐ"))</p>
                                </td>
                                <td class="cart_delete">
                                    <a class="cart_quantity_delete" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductID"><i class="fa fa-times"></i></a>
                                </td>
                            </tr>
                        }

                         </tr>


                    <tr>
                                <div class="button-group mt-2">

                                <a class="btn btn-warning btn-sm" asp-controller="CheckOutOrder" asp-action="Index">Đặt hàng</a>
                                <a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="Clear">Clear</a>

                                
                                </div>
                        </tr>


                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">
                                <h4>Your cart is empty</h4>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<style>
    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .cart_info .table {
        margin-bottom: 0;
        width: 100%;
        border-collapse: collapse;
    }

    .cart_menu {
        background: #ff9900;
        font-weight: bold;
        color: #fff;
    }

        .cart_menu td {
            padding: 10px;
            text-align: center;
        }

    .cart_product img {
        width: 100px;
        height: auto;
    }

    .cart_description h4 a {
        color: #333;
        text-decoration: none;
    }

        .cart_description h4 a:hover {
            color: #ff9900;
        }

    .cart_price,
    .cart_total {
        line-height: 2.5;
        text-align: center;
    }

    .cart_quantity {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .cart_quantity_input {
        width: 50px;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
        margin: 0 5px;
    }

    .cart_quantity_delete {
        color: #ff0000;
        cursor: pointer;
    }

    .btn {
        margin: 0 5px;
        border-radius: 4px;
        padding: 5px 10px;
        font-size: 14px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .btn-danger {
        background-color: #d9534f;
        color: #fff;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-success {
        background-color: #5cb85c;
        color: #fff;
        border: none;
    }

        .btn-success:hover {
            background-color: #4cae4c;
        }

    .btn-primary {
        background-color: #0275d8;
        color: #fff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #025aa5;
        }

    .btn-warning {
        background-color: #f0ad4e;
        color: #fff;
        border: none.
    }

        .btn-warning:hover {
            background-color: #ec971f;
        }

    .grand-total {
        font-size: 18px;
        font-weight: bold;
        text-align: right;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .table-responsive {
        margin-top: 20px;
    }
</style>

